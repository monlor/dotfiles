{
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 15,
  "debug.console.fontSize": 15,
  "window.zoomLevel": 0.5,
  "editor.fontFamily": "'DroidSansM Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.formatOnPaste": false,
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.fontLigatures": false,
  "editor.wordWrap": "off",
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.excludeGitIgnore": false,
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  "workbench.statusBar.visible": true,
  // Apparence
  "workbench.colorTheme": "GitHub Light",

  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "explorer.compactFolders": false,
  "editor.renderWhitespace": "selection",
  "editor.bracketPairColorization.enabled": true,

  "workbench.list.horizontalScrolling": true,
  "workbench.sideBar.location": "left",
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": true,

  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",

  // Extensions
  "symbols.hidesExplorerArrows": false,
  "editor.codeActionsOnSave": {


  },
  "window.autoDetectColorScheme": true,
  "workbench.preferredHighContrastColorTheme": "GitHub Dark High Contrast",
  "workbench.preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "workbench.preferredDarkColorTheme": "GitHub Dark",
  "editor.rulers": [
    
  ]
}
