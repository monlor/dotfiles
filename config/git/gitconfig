[alias]
    pullff = pull --ff-only
    ignore = update-index --assume-unchanged
    ignore-not = update-index --no-assume-unchanged
	  graph = log --graph --oneline
    tree = log --oneline --decorate --graph
    ls = log --graph --pretty='%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]' --abbrev-commit --date=short
    authors = shortlog -s -n -e

[color]
	ui = true

[color "grep"]
    match = cyan bold
    selected = blue
    context = normal
    filename = magenta
    linenumber = green
    separator = yellow
    function = blue

[color "diff"]
    # 用于显示未添加到暂存区的更改的颜色配置
    color = auto

[color "diff-highlight"]
    # 新增的行将以绿色显示
    new = green bold

    # 删除的行将以红色显示
    old = red bold

    # 修改的行将以蓝色显示
    frag = blue bold

    # 更改的行将以紫色显示
    meta = yellow bold

    # 指示行将以青色显示
    whitespace = cyan reverse

[pretty]
    line = "%C(auto)%h%d %s %C(yellow)by %C(blue)%an %C(green)%ar"
    compact = "%C(auto)%h %s %C(green)%ar%n %C(auto)%d%n"
    detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ar%n %C(auto)%d%n"

[grep]
    lineNumber = true

[push]
    default = upstream
    autoSetupRemote = true

[credential]
    helper = cache

[commit]
    template = ~/.gitmessage

# Allow local customizations in the .gitconfig.user file
[include]
    path = ~/.gitconfig.user

[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    editor = vim

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[init]
	defaultBranch = main
