{
  "mcpServers": {
    "fetch": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh uvx mcp-server-fetch"
      ]
    },
    "context7": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y @upstash/context7-mcp"
      ]
    },
    "sequential-thinking": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y @modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "puppeteer": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y @modelcontextprotocol/server-puppeteer"
      ]
    },
    "magic": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y @21st-dev/magic@latest"
      ],
      "env": {
        "API_KEY": "$MAGIC_API_KEY"
      }
    },
    "time": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh uvx mcp-server-time"
      ]
    },
    "git": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh uvx mcp-server-git"
      ]
    },
    "taskmaster-ai": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y --package=task-master-ai task-master-ai"
      ],
      "env": {
        "OPENAI_API_KEY": "$OPENAI_API_KEY"
      }
    },
    "playwright": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y @playwright/mcp@latest"
      ]
    },
    "deepwiki": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh npx -y mcp-deepwiki@latest"
      ]
    },
    "zen": {
      "command": "sh",
      "args": [
        "-c",
        "~/.mcp.sh uvx --from git+https://github.com/BeehiveInnovations/zen-mcp-server.git zen-mcp-server"
      ],
      "env": {
        "OPENAI_API_KEY": "$OPENAI_API_KEY"
      }
    }
  },
  "theme": "Xcode",
  "selectedAuthType": "oauth-personal"
}